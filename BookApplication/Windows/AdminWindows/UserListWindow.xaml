<Window x:Class="BookApplication.Windows.AdminWindows.UserListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookApplication.Windows.AdminWindows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Title="AuthorizationView" Height="650" Width="1200"
        MouseDown="Window_MouseDown">

    <Border>
        <Border.Background>
            <SolidColorBrush Color="#313338"/>
        </Border.Background>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="95"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="65"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"> 
                <Button x:Name="BtnExit"
                        Height="30"
                        Width="75"
                        BorderThickness="0"
                        Content="Выйти"
                        Foreground="#FFFFFF"
                        FontFamily="Whitney Bold"
                        Cursor="Hand"
                        Margin="0 0 35 0"
                        Click="BtnExit_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#313338"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#35373C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3B3D44"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                     HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <Grid Grid.Row="0" 
              Grid.Column="1">
                <Button x:Name="BtnClose"
                        Height="24"
                        Width="25"
                        BorderThickness="0"
                        Content="⨉"
                        FontSize="15"
                        BorderBrush="Transparent"
                        Foreground="#A2A7AD"
                        VerticalAlignment="Top"
                        Cursor="Hand"
                        Click="BtnClose_MouseDown">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F23F42"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <Button x:Name="BtnUserList"
                        Height="45"
                        Width="200"
                        BorderThickness="0"
                        Content="Список пользователей"
                        Foreground="#FFFFFF"
                        FontFamily="Whitney Bold"
                        Cursor="Hand"
                        Margin="0 0 15 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#5865F2"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4752C4"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3C45A5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="BtnLesson"
                        Height="45"
                        Width="200"
                        BorderThickness="0"
                        Content="Лекции"
                        Foreground="#FFFFFF"
                        FontFamily="Whitney Bold"
                        Cursor="Hand"
                        Margin="0 0 15 0"
                        Click="BtnLesson_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#5865F2"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4752C4"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3C45A5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="BtnTest"
                        Height="45"
                        Width="200"
                        BorderThickness="0"
                        Content="Тесты"
                        Foreground="#FFFFFF"
                        FontFamily="Whitney Bold"
                        Cursor="Hand"
                        Margin="0 0 15 0">  
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#5865F2"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4752C4"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3C45A5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="BtnVideoLesson"
                        Height="45"
                        Width="200"
                        BorderThickness="0"
                        Content="Видеоуроки"
                        Foreground="#FFFFFF"
                        FontFamily="Whitney Bold"
                        Cursor="Hand"
                        Margin="0 0 15 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#5865F2"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4752C4"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3C45A5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock x:Name="TblRole"
                           FontSize="16"
                           FontFamily="Whitney"
                           VerticalAlignment="Center"
                           Foreground="#949BA4"/>
                <TextBlock x:Name="TblName"
                           FontSize="16"
                           FontFamily="Whitney"
                           VerticalAlignment="Center"
                           Foreground="#ffffff"/>
            </StackPanel>

            <ListView x:Name="LvUser"
                      Grid.Row="2"
                      Grid.ColumnSpan="2"
                      Background="#1E1F22"
                      Width="1180"
                      BorderThickness="0"
                      d:ItemsSource="{d:SampleData ItemCount=5}"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      Margin="5">   
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="3"
                                BorderThickness="5"
                                BorderBrush="#313338"
                                Width="350"
                                Height="370"
                                Margin="10 5 0 25">
                            <ScrollViewer>
                                <StackPanel HorizontalAlignment="Left"
                                            Margin="10 5 0 0">
                                    <TextBlock Text="АДРЕС ЭЛЕКТРОННОЙ ПОЧТЫ"
                                               Foreground="#949BA4"
                                               FontSize="12"
                                               FontFamily="Whitney Bold"
                                               Margin="0 0 0 5"/>
                                    <TextBlock x:Name="TblEmail"
                                               Text="{Binding Email}"
                                               Width="300"
                                               TextWrapping="Wrap"
                                               Height="40"
                                               Background="#26282C"
                                               Foreground="#BDC0C3"
                                               Padding="10 10 0 0"
                                               FontFamily="Whitney Medium"
                                               FontSize="16"
                                               Margin="0 0 0 10">
                                    </TextBlock>

                                    <TextBlock Text="ФАМИЛИЯ"
                                               Foreground="#949BA4"
                                               FontSize="12"
                                               FontFamily="Whitney Bold"
                                               Margin="0 0 0 5"/>
                                    <TextBlock x:Name="TblLName"
                                               Text="{Binding LName}"
                                               Width="300"
                                               TextWrapping="Wrap"
                                               Height="40"
                                               Background="#26282C"
                                               Foreground="#BDC0C3"
                                               Padding="10 10 0 0"
                                               FontFamily="Whitney Medium"
                                               FontSize="16"
                                               Margin="0 0 0 10">
                                    </TextBlock>

                                    <TextBlock Text="ИМЯ"
                                               Foreground="#949BA4"
                                               FontSize="12"
                                               FontFamily="Whitney Bold"
                                               Margin="0 0 0 5"/>
                                    <TextBlock x:Name="TblFName"
                                               Text="{Binding FName}"
                                               Width="300"
                                               TextWrapping="Wrap"
                                               Height="40"
                                               Background="#26282C"
                                               Foreground="#BDC0C3"
                                               Padding="10 10 0 0"
                                               FontFamily="Whitney Medium"
                                               FontSize="16"
                                               Margin="0 0 0 10">
                                    </TextBlock>

                                    <TextBlock Text="ОТЧЕСТВО"
                                               Foreground="#949BA4"
                                               FontSize="12"
                                               FontFamily="Whitney Bold"
                                               Margin="0 0 0 5"/>
                                    <TextBlock x:Name="TblMName"
                                               Text="{Binding MName}"
                                               Width="300"
                                               TextWrapping="Wrap"
                                               Height="40"
                                               Background="#26282C"
                                               Foreground="#BDC0C3"
                                               Padding="10 10 0 0"
                                               FontFamily="Whitney"
                                               FontSize="16"
                                               Margin="0 0 0 10">
                                    </TextBlock>

                                    <TextBlock Text="ДАТА РОЖДЕНИЯ"
                                               Foreground="#949BA4"
                                               FontSize="12"
                                               FontFamily="Whitney Bold"
                                               Margin="0 0 0 5"/>
                                    <TextBlock x:Name="TblDateOfBirth"
                                               Text="{Binding DateOFBirth}"
                                               Width="300"
                                               TextWrapping="Wrap"
                                               Height="40"
                                               Background="#26282C"
                                               Foreground="#BDC0C3"
                                               Padding="10 10 0 0"
                                               FontFamily="Whitney Medium"
                                               FontSize="16"
                                               Margin="0 0 0 10">
                                    </TextBlock>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Border>
</Window>

